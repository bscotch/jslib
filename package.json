{
  "name": "jslib",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:all": "turbo run build --force",
    "rumpus:clean-build": "pnpm install --filter tech && pnpm clean:artifacts && pnpm clean:deps && ./rumpus/server/scripts/ci.prebuild.sh && ./rumpus/server/scripts/ci.build.sh && cd dist && docker-compose down && node scripts/ci.test.mjs",
    "clean:artifacts": "node ./scripts/nuke-builds.mjs",
    "clean:deps": "node ./scripts/nuke-deps.mjs",
    "fix:deps": "syncpack fix-mismatches && treb fix --allProjects --packageJson",
    "test": "concurrently -k -n rumpus,tests \"cd rumpus/server && docker-compose up && pnpm serve:static\" \"node rumpus/server/scripts/ready.mjs && pnpm turbo run build test\" --only",
    "watch": "turbo run watch --parallel"
  },
  "dependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "~5.48.2",
    "@typescript-eslint/parser": "~5.48.2",
    "@typescript-eslint/utils": "^5.48.2",
    "concurrently": "^7.6.0",
    "del": "7.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "syncpack": "^8.4.11",
    "tslib": "^2.4.1",
    "turbo": "^1.7.0",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7",
    "yarn": ">=3"
  },
  "syncpack": {
    "workspace": false,
    "source": [
      "package.json",
      "*/*/package.json"
    ]
  },
  "trebuchet": {
    "npmScope": "@bscotch",
    "keep": {
      "dependencies": [
        "@types/chai",
        "@types/mocha",
        "@types/node",
        "@typescript-eslint*",
        "eslint*",
        "nano-staged",
        "prettier*",
        "source-map-support",
        "concurrently",
        "mongoose",
        "yaml",
        "zx"
      ]
    },
    "vscodeWorkspaceConfigPath": false
  },
  "packageManager": "pnpm@7.28.0",
  "workspaces": [
    "packages/*"
  ]
}
