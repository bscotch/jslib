{
  "include": ["src/**/*.ts"],
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node", "mocha", "chai"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
