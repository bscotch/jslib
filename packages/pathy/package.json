{
  "name": "@bscotch/pathy",
  "version": "2.8.0",
  "description": "A toolkit for simplifying working with paths and files.",
  "keywords": [
    "path",
    "file",
    "filesystem",
    "fs",
    "read",
    "write",
    "filepath",
    "directory",
    "normalize",
    "absolute",
    "sort",
    "relative"
  ],
  "homepage": "https://github.com/bscotch/jslib/tree/develop/packages/pathy#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bscotch/jslib.git",
    "directory": "packages/pathy"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf build dist *.tsbuildinfo **/*.tsbuildinfo",
    "test": "mocha --config ../../config/.mocharc.cjs",
    "test:dev": "mocha --config ../../config/.mocharc.cjs --forbid-only=false --parallel=false --timeout=9999999999",
    "watch": "tsc --build --watch"
  },
  "dependencies": {
    "@bscotch/utility": "workspace:*",
    "fs-extra": "11.1.1",
    "json5": "^2.2.3",
    "tslib": "^2.5.0",
    "yaml": "2.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "type-fest": "^3.8.0",
    "typescript": "5.0.4",
    "zod": "^3.21.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
