{
  "name": "@bscotch/xliff",
  "version": "0.5.0",
  "description": "A library for building simple XLIFF 2.0 and GlossML 1.0 files for hand-off to translators.",
  "keywords": [
    "xliff",
    "xlf",
    "gls",
    "glossml",
    "glossary",
    "i18n",
    "l10n"
  ],
  "homepage": "https://github.com/bscotch/jslib/tree/develop/packages/xliff#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bscotch/jslib.git",
    "directory": "packages/xliff"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "test": "mocha --config ../../config/.mocharc.cjs",
    "test:dev": "mocha --config ../../config/.mocharc.cjs --forbid-only=false --parallel=false --timeout=9999999999",
    "watch": "tsc --build --watch"
  },
  "devDependencies": {
    "typescript": "5.2.2",
    "xml-formatter": "3.5.0"
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
