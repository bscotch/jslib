{
  "name": "@bscotch/xliff",
  "version": "0.2.1",
  "description": "A library for building simple XLIFF 2.0 files.",
  "keywords": [
    "xliff",
    "i18n",
    "l10n"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "test": "mocha --config ../../config/.mocharc.cjs",
    "test:dev": "mocha --config ../../config/.mocharc.cjs --forbid-only=false --parallel=false --timeout=9999999999",
    "watch": "tsc --build --watch"
  },
  "devDependencies": {
    "typescript": "5.1.6",
    "xml-formatter": "3.5.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
